<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>
    <link rel="stylesheet" href="./styleSheets/signupStyle.css">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>
<body>
    <div id="formElement">
        <h2>Sign In with OTP</h2>
        <form id="signinForm" action="/verify-signin" method="POST">
            <input type="text" name="phno" placeholder="Phone Number" required>
            <button type="button" id="sendSigninOtpBtn">Send OTP</button>
            <input type="text" name="otp" placeholder="Enter OTP" required id="otpSigninField" style="display:none;">
            <button type="submit" id="signinBtn" style="display:none;">Sign In</button>
        </form>
    </div>

    <script>
        $('#sendSigninOtpBtn').click(function() {
            const phoneNumber = $('input[name="phno"]').val();
            $.post('/send-otp-signin', { phno: phoneNumber }, function(response) {
                alert(response);
                $('#otpSigninField').show();
                $('#signinBtn').show();
                $('#sendSigninOtpBtn').hide();
            }).fail(function() {
                alert("Failed to send OTP. Please try again.");
            });
        });
    </script>
</body>
</html>
