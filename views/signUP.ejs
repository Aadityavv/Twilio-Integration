<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <link rel="stylesheet" href="./styleSheets/signupStyle.css">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>
<body>
    <div id="formElement">
        <h2>Sign Up</h2>
        <form id="signupForm" action="/verify-signup" method="POST">
            <input type="text" name="name" placeholder="Full Name" required>
            <input type="text" name="phno" placeholder="Phone Number" required>
            <input type="email" name="email" placeholder="Email" required>
            <input type="password" name="password" placeholder="Password" required>
            <button type="button" id="sendOtpBtn">Send OTP</button>
            <input type="text" name="otp" placeholder="Enter OTP" required id="otpField" style="display:none;">
            <button type="submit" id="signupBtn" style="display:none;">Sign Up</button>
        </form>
    </div>

    <script>
        $('#sendOtpBtn').click(function() {
            const phoneNumber = $('input[name="phno"]').val();
            $.post('/send-otp', { phno: phoneNumber }, function(response) {
                alert(response);
                $('#otpField').show();
                $('#signupBtn').show();
                $('#sendOtpBtn').hide();
            }).fail(function() {
                alert("Failed to send OTP. Please try again.");
            });
        });
    </script>
</body>
</html>
